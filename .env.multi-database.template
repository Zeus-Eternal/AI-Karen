# =============================================================================
# Multi-Database Configuration Template
# =============================================================================
# This template provides configuration for multiple database backends:
# - MySQL (default)
# - MongoDB (NoSQL)
# - Firestore (Google Cloud NoSQL)
#
# Copy this file and customize for your environment.
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE TYPE SELECTION
# -----------------------------------------------------------------------------
# Choose the database type: mysql, mongodb, or firestore
# Default: mysql
DB_TYPE=mysql

# Enable debug mode for database operations
DB_DEBUG=false

# =============================================================================
# MYSQL CONFIGURATION (Default)
# =============================================================================

# Connection Settings
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=ai_karen

# Connection Pool Settings
MYSQL_POOL_SIZE=10
MYSQL_MAX_OVERFLOW=20
MYSQL_POOL_TIMEOUT=30
MYSQL_POOL_RECYCLE=3600

# Character Set (utf8mb4 recommended for full Unicode support)
MYSQL_CHARSET=utf8mb4

# SSL/TLS Configuration (optional)
# MYSQL_SSL_CA=/path/to/ca-cert.pem
# MYSQL_SSL_CERT=/path/to/client-cert.pem
# MYSQL_SSL_KEY=/path/to/client-key.pem
# MYSQL_SSL_DISABLED=false

# Complete Connection URL (overrides individual settings if provided)
# MYSQL_URL=mysql+pymysql://user:password@localhost:3306/ai_karen

# =============================================================================
# MONGODB CONFIGURATION (NoSQL)
# =============================================================================

# Connection Settings
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USER=admin
MONGO_PASSWORD=your_mongo_password
MONGO_DATABASE=ai_karen

# Authentication
MONGO_AUTH_SOURCE=admin

# Replica Set (optional, for high availability)
# MONGO_REPLICA_SET=rs0

# Connection Pool Settings
MONGO_MAX_POOL_SIZE=100
MONGO_MIN_POOL_SIZE=10

# SSL/TLS Configuration (optional)
MONGO_SSL=false
# MONGO_SSL_CA_CERTS=/path/to/ca.pem

# Timeouts (in milliseconds)
MONGO_SERVER_SELECTION_TIMEOUT=30000
MONGO_CONNECT_TIMEOUT=10000
MONGO_SOCKET_TIMEOUT=45000

# Complete Connection URL (overrides individual settings if provided)
# MONGO_URL=mongodb://user:password@localhost:27017/ai_karen?authSource=admin

# =============================================================================
# FIRESTORE CONFIGURATION (Google Cloud)
# =============================================================================

# Google Cloud Project
FIRESTORE_PROJECT_ID=your-gcp-project-id

# Authentication (choose one method)
# Method 1: Path to service account JSON file
FIRESTORE_CREDENTIALS_PATH=/path/to/service-account-key.json

# Method 2: Service account JSON as environment variable
# FIRESTORE_CREDENTIALS_JSON='{"type":"service_account","project_id":"..."}'

# Firestore Database ID
# Use "(default)" for the default database or specify a custom database name
FIRESTORE_DATABASE_ID=(default)

# Firestore Emulator (for local development/testing)
FIRESTORE_USE_EMULATOR=false
FIRESTORE_EMULATOR_HOST=localhost
FIRESTORE_EMULATOR_PORT=8080

# Collection Prefix (optional, useful for multi-tenancy)
FIRESTORE_COLLECTION_PREFIX=

# Timeout Settings (in seconds)
FIRESTORE_TIMEOUT=60.0


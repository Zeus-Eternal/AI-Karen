{
  "permissions": {
    "read": [
      "Read access to files and directories"
    ],
    "edit": [
      "Edit access to files and directories"
    ],
    "browser": [
      "Browser-related permissions"
    ],
    "command": [
      "Command execution permissions"
    ],
    "mcp": [
      "Model Context Protocol permissions"
    ]
  },
  "roles": {
    "admin": {
      "permissions": ["read", "edit", "browser", "command", "mcp"],
      "description": "Full administrative access"
    },
    "user": {
      "permissions": ["read", "browser"],
      "description": "Standard user access"
    },
    "developer": {
      "permissions": ["read", "edit", "browser", "command"],
      "description": "Developer access with editing capabilities"
    },
    "super_admin": {
      "permissions": ["read", "edit", "browser", "command", "mcp"],
      "description": "Super administrator with full system access"
    },
    "trainer": {
      "permissions": ["read", "edit", "browser", "command"],
      "description": "AI model trainer with editing capabilities"
    },
    "analyst": {
      "permissions": ["read", "browser"],
      "description": "Data analyst with read-only access"
    },
    "readonly": {
      "permissions": ["read"],
      "description": "Read-only access to all resources"
    },
    "model_manager": {
      "permissions": ["read", "edit", "command", "mcp"],
      "description": "Manages AI models and configurations"
    },
    "data_steward": {
      "permissions": ["read", "edit", "browser"],
      "description": "Manages data quality and access"
    },
    "routing_admin": {
      "permissions": ["read", "edit", "command"],
      "description": "Administrates routing rules and configurations"
    },
    "routing_operator": {
      "permissions": ["read", "command"],
      "description": "Operates routing systems"
    },
    "routing_auditor": {
      "permissions": ["read", "browser"],
      "description": "Audits routing operations and logs"
    }
  },
  "fileRestrictions": {
    "allowedPatterns": [
      "\\.(ts|tsx|js|jsx|json|md|mdx)$",
      "\\.(css|scss|less)$",
      "\\.(png|jpg|jpeg|gif|svg|webp)$"
    ],
    "deniedPatterns": [
      "^\\.",
      "node_modules",
      "\\.env",
      "\\.git"
    ]
  }
}
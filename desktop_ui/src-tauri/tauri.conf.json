{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../frontend/dist"
  },
  "package": {
    "productName": "Kari Control Room",
    "version": "0.1.0"
  },
  "tauri": {
    "bundle": {
      "identifier": "com.example.kari"
    },
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://api.kari.local"
    },
    "allowlist": {
      "http": {
        "request": true
      },
      "shell": {
        "all": true
      }
    }
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Kari Theme Schema",
  "type": "object",
  "required": ["name", "scope", "layout", "style"],
  "properties": {
    "name": {"type": "string"},
    "version": {"type": "string"},
    "author": {"type": "string"},
    "license": {"type": "string"},
    "scope": {"type": "string", "enum": ["app", "plugin", "prompt"]},
    "layout": {"type": "string"},
    "style": {
      "type": "object",
      "properties": {
        "colors": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        },
        "typography": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        },
        "icons": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        },
        "widgets": {
          "type": "array",
          "items": {"type": "string"}
        }
      },
      "additionalProperties": true
    },
    "metadata": {"type": "object", "additionalProperties": true}
  },
  "additionalProperties": true
}

# Local frontend environment variables (Next.js)
# These are read at dev/start/build time. Restart the dev server after editing.
NEXT_PUBLIC_API_BASE_URL=http://localhost:8001
NEXT_PUBLIC_KAREN_BACKEND_URL=http://localhost:8001
# Server-side aliases used by some scripts
KAREN_API_BASE=http://localhost:8001
KAREN_BACKEND_URL=http://localhost:8001
# CORS configuration
KARI_CORS_ORIGINS=http://localhost:8020,http://127.0.0.1:8020,http://localhost:8010,http://127.0.0.1:8010
KARI_CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
KARI_CORS_HEADERS=*
KARI_CORS_CREDENTIALS=true
ALLOW_DEV_ORIGINS=true
# Auth configuration for development
AUTH_MODE=bypass

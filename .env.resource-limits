# AI Karen Resource Management Configuration
# These settings help control memory and CPU usage

# Maximum memory usage before triggering cleanup (in MB)
KAREN_MAX_MEMORY_MB=1024

# Maximum CPU usage before triggering cleanup (percentage)
KAREN_MAX_CPU_PERCENT=30.0

# How often to check resource usage (seconds)
KAREN_RESOURCE_CHECK_INTERVAL=10.0

# Service idle timeouts (seconds)
KAREN_NLP_IDLE_TIMEOUT=60.0
KAREN_ORCHESTRATOR_IDLE_TIMEOUT=30.0
KAREN_ANALYTICS_IDLE_TIMEOUT=15.0

# Enable lazy loading and minimal startup
KARI_LAZY_LOADING=true
KARI_MINIMAL_STARTUP=true
KARI_ULTRA_MINIMAL=true

# Disable heavy services when not needed
KAREN_DISABLE_BACKGROUND_TASKS=true
KAREN_DISABLE_PRELOADING=true
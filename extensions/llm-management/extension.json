{
  "name": "llm-management",
  "version": "1.0.0",
  "display_name": "LLM Management Suite",
  "description": "Comprehensive LLM provider and model management with AI-powered optimization",
  "author": "Kari AI Team",
  "license": "MIT",
  "category": "management",
  "tags": ["llm", "models", "providers", "management", "optimization"],
  
  "api_version": "1.0",
  "kari_min_version": "0.4.0",
  
  "capabilities": {
    "provides_ui": true,
    "provides_api": true,
    "provides_background_tasks": true,
    "provides_webhooks": false
  },
  
  "dependencies": {
    "plugins": ["time_query", "hf_llm"],
    "extensions": [],
    "system_services": ["postgres", "redis"]
  },
  
  "permissions": {
    "data_access": ["read", "write"],
    "plugin_access": ["execute"],
    "system_access": ["metrics", "logs", "scheduler"],
    "network_access": ["outbound_http"]
  },
  
  "resources": {
    "max_memory_mb": 512,
    "max_cpu_percent": 20,
    "max_disk_mb": 1024
  },
  
  "ui": {
    "control_room_pages": [
      {
        "name": "LLM Management",
        "path": "/llm-management",
        "icon": "ðŸ¤–",
        "permissions": ["user", "admin"]
      }
    ],
    "streamlit_pages": [
      {
        "name": "Model Analytics",
        "module": "ui.model_analytics",
        "permissions": ["admin"]
      }
    ]
  },
  
  "api": {
    "endpoints": [
      {
        "path": "/llm/providers",
        "methods": ["GET", "POST"],
        "permissions": ["user"]
      },
      {
        "path": "/llm/models",
        "methods": ["GET", "POST"],
        "permissions": ["user"]
      },
      {
        "path": "/llm/optimize",
        "methods": ["POST"],
        "permissions": ["admin"]
      }
    ]
  },
  
  "background_tasks": [
    {
      "name": "model_health_check",
      "schedule": "*/5 * * * *",
      "function": "tasks.check_model_health"
    },
    {
      "name": "performance_optimization",
      "schedule": "0 */6 * * *",
      "function": "tasks.optimize_model_performance"
    }
  ],
  
  "marketplace": {
    "price": "free",
    "support_url": "https://github.com/kari-ai/extensions",
    "documentation_url": "https://docs.kari.ai/extensions/llm-management",
    "screenshots": ["llm-dashboard.png", "model-analytics.png"]
  }
}
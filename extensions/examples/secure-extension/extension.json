{
  "name": "secure-extension",
  "version": "1.0.0",
  "display_name": "Secure Extension Example",
  "description": "Example extension demonstrating security features and sandboxing",
  "author": "Kari Security Team",
  "license": "MIT",
  "category": "security",
  "tags": ["security", "example", "sandbox"],
  
  "api_version": "1.0",
  "kari_min_version": "0.4.0",
  
  "capabilities": {
    "provides_ui": true,
    "provides_api": true,
    "provides_background_tasks": true,
    "provides_webhooks": false
  },
  
  "dependencies": {
    "plugins": [],
    "extensions": [],
    "system_services": ["postgres"]
  },
  
  "permissions": {
    "data_access": ["read", "write"],
    "plugin_access": ["execute"],
    "system_access": ["files", "logs"],
    "network_access": ["external"]
  },
  
  "resources": {
    "max_memory_mb": 256,
    "max_cpu_percent": 15,
    "max_disk_mb": 512
  },
  
  "ui": {
    "control_room_pages": [
      {
        "name": "Security Dashboard",
        "path": "/security",
        "icon": "ðŸ”’",
        "permissions": ["user", "admin"]
      }
    ]
  },
  
  "api": {
    "endpoints": [
      {
        "path": "/security/status",
        "methods": ["GET"],
        "permissions": ["user"],
        "description": "Get security status"
      },
      {
        "path": "/security/test",
        "methods": ["POST"],
        "permissions": ["admin"],
        "description": "Test security features"
      }
    ]
  },
  
  "background_tasks": [
    {
      "name": "security_monitor",
      "schedule": "*/5 * * * *",
      "function": "tasks.monitor_security",
      "description": "Monitor security status every 5 minutes",
      "enabled": true
    }
  ],
  
  "marketplace": {
    "price": "free",
    "categories": ["security", "monitoring"],
    "keywords": ["security", "sandbox", "monitoring", "permissions"]
  }
}
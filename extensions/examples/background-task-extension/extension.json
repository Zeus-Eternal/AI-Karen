{
  "name": "background-task-extension",
  "version": "1.0.0",
  "display_name": "Background Task Extension",
  "description": "Example extension demonstrating background task capabilities",
  "author": "Kari AI Team",
  "license": "MIT",
  "category": "examples",
  "tags": ["example", "background-tasks", "scheduling"],
  
  "api_version": "1.0",
  "kari_min_version": "0.4.0",
  
  "capabilities": {
    "provides_ui": false,
    "provides_api": true,
    "provides_background_tasks": true,
    "provides_webhooks": false
  },
  
  "dependencies": {
    "plugins": [],
    "extensions": [],
    "system_services": []
  },
  
  "permissions": {
    "data_access": ["read", "write"],
    "plugin_access": [],
    "system_access": ["logs"],
    "network_access": []
  },
  
  "resources": {
    "max_memory_mb": 128,
    "max_cpu_percent": 10,
    "max_disk_mb": 256
  },
  
  "api": {
    "endpoints": [
      {
        "path": "/status",
        "methods": ["GET"],
        "permissions": ["user"],
        "description": "Get extension status and task information"
      }
    ]
  },
  
  "background_tasks": [
    {
      "name": "hourly_cleanup",
      "schedule": "0 * * * *",
      "function": "hourly_cleanup_task",
      "description": "Cleanup task that runs every hour",
      "enabled": true
    },
    {
      "name": "daily_report",
      "schedule": "0 9 * * *",
      "function": "daily_report_task",
      "description": "Generate daily report at 9 AM",
      "enabled": true
    },
    {
      "name": "system_health_check",
      "schedule": "*/5 * * * *",
      "function": "system_health_check_task",
      "description": "Check system health every 5 minutes",
      "enabled": true
    }
  ],
  
  "marketplace": {
    "price": "free",
    "categories": ["examples", "utilities"],
    "keywords": ["background-tasks", "scheduling", "automation", "example"]
  }
}
{
  "name": "hello-extension",
  "version": "1.0.0",
  "display_name": "Hello Extension",
  "description": "A simple example extension demonstrating the extension system capabilities",
  "author": "AI Karen Team",
  "license": "MIT",
  "category": "examples",
  "tags": ["example", "demo", "hello-world"],
  
  "api_version": "1.0",
  "kari_min_version": "0.4.0",
  
  "capabilities": {
    "provides_ui": true,
    "provides_api": true,
    "provides_background_tasks": false,
    "provides_webhooks": false
  },
  
  "dependencies": {
    "plugins": [],
    "extensions": [],
    "system_services": []
  },
  
  "permissions": {
    "data_access": ["read"],
    "plugin_access": [],
    "system_access": [],
    "network_access": []
  },
  
  "resources": {
    "max_memory_mb": 64,
    "max_cpu_percent": 5,
    "max_disk_mb": 128
  },
  
  "ui": {
    "control_room_pages": [
      {
        "name": "Hello Dashboard",
        "path": "/hello",
        "icon": "ðŸ‘‹",
        "permissions": ["user", "admin"]
      }
    ],
    "streamlit_pages": []
  },
  
  "api": {
    "endpoints": [
      {
        "path": "/hello",
        "methods": ["GET"],
        "permissions": ["user"],
        "description": "Get a hello message",
        "tags": ["greeting"]
      },
      {
        "path": "/hello/{name}",
        "methods": ["GET"],
        "permissions": ["user"],
        "description": "Get a personalized hello message",
        "tags": ["greeting"]
      }
    ],
    "prefix": "/api/extensions/hello-extension",
    "tags": ["hello-extension"]
  },
  
  "background_tasks": [],
  
  "marketplace": {
    "price": "free",
    "support_url": "https://github.com/ai-karen/extensions/hello-extension",
    "documentation_url": "https://docs.ai-karen.com/extensions/hello-extension",
    "screenshots": [],
    "categories": ["examples"],
    "keywords": ["hello", "example", "demo"]
  }
}